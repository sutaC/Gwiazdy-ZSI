<!DOCTYPE html>
<html lang="pl">
    <head>
        <%- include('../components/globalHead.ejs') %>
        <title>Gwiazdy ZSI | Zdjęcie <%= photo.id %></title>
        <link rel="stylesheet" href="/style/photos.css" />
    </head>

    <body>
        <header>
            <nav class="wraper">
                <a href="/" class="buttonlike">Strona główna</a>

                <% if(authorized){ %>
                <a href="/img/<%= photo.id %>/update" class="buttonlike"
                    >Edytuj</a
                >
                <% } %>
            </nav>

            <h1>Id zdjęcia: <%= photo.id %></h1>

            <div class="tag-section">
                <div id="tags" class="tags">
                    <% if (tags.length > 0) { %> <%-
                    include('../components/taglist.ejs', {tags, photoid:
                    photo.id, checked: true, authorized}) %><% } %>
                </div>

                <% if(authorized){ %>

                <div class="search-field">
                    <input
                        type="text"
                        id="promptInput"
                        name="prompt"
                        placeholder="Wyszukaj..."
                        hx-get="/api/img/<%= photo.id %>/tag"
                        hx-trigger="keyup changed delay:250ms, search"
                        hx-target="next #results"
                    />
                    <div id="results" class="search-results"></div>
                </div>

                <% } %>
            </div>
        </header>

        <main><%- include("../components/imgDisplay.ejs", {photo}) %></main>

        <footer>
            <% if (prevImgId !== null) { %>
            <a
                href="/img/<%= prevImgId %>"
                class="buttonlike"
                hx-boost="true"
                hx-trigger="click, keyup[key=='ArrowLeft'] from:body"
                hx-replace-url="true"
                >&leftarrow;</a
            >
            <% } else { %>
            <a
                href="#"
                class="buttonlike"
                style="visibility: hidden"
                aria-hidden="true"
                >&leftarrow;</a
            >
            <% } %>
            <a
                href="/randomimg"
                class="buttonlike"
                hx-boost="true"
                hx-trigger="click, keyup[key==' '] from:body"
                >Losuj</a
            >
            <% if (nextImgId !== null) { %>
            <a
                href="/img/<%= nextImgId %>"
                class="buttonlike"
                hx-boost="true"
                hx-trigger="click, keyup[key=='ArrowRight'] from:body"
                hx-replace-url="true"
                >&rightarrow;</a
            >
            <% } else { %>
            <a
                href="#"
                class="buttonlike"
                style="visibility: hidden"
                aria-hidden="true"
                >&rightarrow;</a
            >
            <% } %>
        </footer>
    </body>
</html>
