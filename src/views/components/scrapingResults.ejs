<% if(spinner) { %>
<div
    class="result"
    hx-get="/scraper/status"
    hx-swap="outerHTML"
    hx-trigger="every 10s"
>
    <small>Skrobanie w trakcie</small>
    <div class="spinner"></div>
</div>
<% } else { %>
<div class="result">
    <h3>Skrobanie zakończone</h3>
    <ul>
        <li>Rodzaj skrobania: <%= type %></li>
        <li>Limit stron: <%= limit %></li>
        <li>Znalezione zdjęcia: <%= found %></li>
        <li>Dodane nowe zdjęcia: <%= added %></li>
        <% if (cachedSkip >= 0) { %>
        <li>Artykuły pominięte przez caching: <%= cachedSkip %></li>
        <% } %>
    </ul>
    <button hx-boost="true" hx-on:click="location.reload()">Odśwież</button>
</div>

<% } %>
